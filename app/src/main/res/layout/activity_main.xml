<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#362A84"
    >
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weather"
        android:textColor="@color/white"
        android:paddingHorizontal="18dp"
        android:paddingVertical="14dp"
        android:textSize="28sp" />


    <!-- Layout с информацией о погоде (как weather_item.xml) -->
    <include
        layout="@layout/fragment_weather"
        android:id="@+id/weatherView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginTop="10dp"
        />

    <include
        layout="@layout/fragment_weather"
        android:id="@+id/weatherView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/weatherView1"
        android:layout_marginTop="16dp"
       />

    <include
        layout="@layout/fragment_weather"
        android:id="@+id/weatherView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/weatherView2"
        android:layout_marginTop="16dp"
      />

    <include
        layout="@layout/fragment_weather"
        android:id="@+id/weatherView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/weatherView3"
        android:layout_marginTop="16dp"
       />

    <include
        layout="@layout/fragment_weather"
        android:id="@+id/weatherView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/weatherView4"
        android:layout_marginTop="16dp"
       />

    <include
        layout="@layout/fragment_weather"
        android:id="@+id/weatherView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/weatherView5"
        android:layout_marginTop="16dp"
       />

</RelativeLayout>